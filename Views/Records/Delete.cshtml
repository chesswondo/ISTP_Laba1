@model Record

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити</h1>

<h3>Чи ви впевнені, що дійсно хочете видалити цей запис?</h3>
<div>
    <h4>Запис</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArtistId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quality)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quality)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Information)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Information)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" value="Id" name="id"/>
        
        @if (ViewBag.GenreId != null)
        {
            <input type="hidden" value="@ViewBag.GenreId" name="some_id" />
            <input type="hidden" value="genre" name="source" />
        }
        @if (ViewBag.ArtistId != null)
        {
            <input type="hidden" value="@ViewBag.ArtistId" name="some_id" />
            <input type="hidden" value="artist" name="source" />
        }
        @if (ViewBag.LabelId != null)
        {
            <input type="hidden" value="@ViewBag.LabelId" name="some_id" />
            <input type="hidden" value="label" name="source" />
        }
        @if (ViewBag.CountryId != null)
        {
            <input type="hidden" value="@ViewBag.CountryId" name="some_id" />
            <input type="hidden" value="country" name="source" />
        }
        
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися до списку</a>
    </form>
</div>
